/* Write a program to build a `Pyramid of stars` of given height */

const buildPyramid = (n) => {
	// Write your code here
     var str=''
     for (i=1;i<=n;i++)
     {
     	for(j=0;j<=n-i;j++)
     	str+=' '
     	for(j=0;j<i;j++)
     	{
          str+='* ';
         }
         str+=' \n';
     }
return(str);
};

/* For example,
INPUT - buildPyramid(6)
OUTPUT -
     *
    * *
   * * *
  * * * *
 * * * * *
* * * * * *

*/

module.exports = buildPyramid;
